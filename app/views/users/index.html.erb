<% @users.each do |user| %>
  <div class="container">
    <div class="card mb-3 border-info mb-3" style="max-width: 900px; margin: 0 auto;">
      <div class="row g-0">
        <div class="col-md-4">
          <img src=<%user.Photo%> class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to user_path(user.id), class:"link-info" do %>
                <h1><%= user.Name %></h1>
              <% end %>
            </h5>
            <p class="card-text"><%=  user.Bio  %></p>
            <p class="card-text text-end"><small class="text-muted">Number of posts: <%=  user.Posts_Counter  %></small></p>
          </div>
        </div>
      </div>
    </div> 
  </div>
<%end%>
